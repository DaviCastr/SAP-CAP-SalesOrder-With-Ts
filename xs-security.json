{
    "xsappname": "sales-order-backend-${space}",
    "tenant-mode": "dedicated",
    "description": "Security profile of sales order backend app",
    "scopes": [
        {
            "name": "uaa.user",
            "description": "UAA User"
        },
        {
            "name": "$XSAPPNAME.admin",
            "description": "Admin user"
        },
        {
            "name": "$XSAPPNAME.read_only_user",
            "description": "Admin user"
        }
    ],
    "attributes": [
        {
            "name": "id",
            "description": "User id",
            "valueType": "string",
            "valueRequired": false
        },
        {
            "name": "groups",
            "description": "User group",
            "valueType": "string",
            "valueRequired": false
        }
    ],
    "role-templates": [
        {
            "name": "Token_Exchange",
            "description": "UAA",
            "scope-references": [
                "uaa.user"
            ]
        },
        {
            "name": "admin",
            "description": "Admin user SH",
            "attribute-references": [
                "id",
                "groups"
            ],
            "scope-references": [
                "$XSAPPNAME.admin"
            ]
        },
        {
            "name": "read_only_user",
            "description": "Read only user SH",
            "attribute-references": [
                "id",
                "groups"
            ],
            "scope-references": [
                "$XSAPPNAME.read_only_user"
            ]
        }
    ],
    "oauth2-configuration": {
        "credential-types": [
            "binding-secret",
            "x509"
        ],
        "redirect-uris": [
            "https://*.applicationstudio.cloud.sap/**",
            "https://*.cfapps.us10-001.hana.ondemand.com/**"
        ]
    }
}